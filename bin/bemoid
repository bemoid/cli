#!/usr/bin/env node

const program = require('commander')

/*
|-----------------------------------------------------------
| Command Registration
|-----------------------------------------------------------
|
| Register command along with options.
|
*/

program
  .version(require('../package').version)
  .usage('<command> [options]')
  .command('clean', 'Clean cache folder stored in user home directory')
  .command('scaffold', 'Scaffold boilerplate from a template')
  .parse(process.argv)